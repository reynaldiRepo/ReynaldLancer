<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomstroke"
    android:orientation="vertical"
    android:padding="6dp">

    <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sosmed_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        app:materialIcon="clipboard_arrow_down"
        app:materialIconColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/name_sosmed_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/sosmed_icon"
        android:text="Is Name"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>