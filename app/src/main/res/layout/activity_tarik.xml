<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".TarikActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/nav_back_from_tarik"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="12dp"
            android:layout_toRightOf="@+id/nav_back_from_tarik"
            android:text="Tarik Saldo"
            android:textColor="@color/colorAccent"
            android:textSize="22dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:background="@drawable/bottomstroke"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Saldo"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/nominal_on_tarik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:inputType="none"
            android:text="Rp. 0"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Jumlah Penarikan"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/nominal_input_on_tarik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Nominal"
            android:inputType="number"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Bank Tujuan"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/bank_tujuan_tarik"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:backgroundTint="@color/colorPrimary"
            android:padding="5dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nomor Rekening"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/no_rek_on_tarik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:hint="Nominal"
            android:inputType="number"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_konfirm_tarik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedorange"
            android:text="Tarik"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>