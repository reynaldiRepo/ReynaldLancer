<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:weightSum="10"
    android:background="@drawable/bottomstroke"
    android:layout_margin="6dp">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="7"
        android:src="@mipmap/upload_icon"
        android:id="@+id/img_item_misi"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_marginBottom="6dp"
            android:id="@+id/delete_item_misi"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_stroke"
            android:layout_marginVertical="3dp"
            android:paddingHorizontal="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textStyle="bold"
                android:textSize="18dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Harga (Optional)"
                android:inputType="number"
                android:id="@+id/harga_item_misi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_stroke"
            android:layout_marginVertical="3dp"
            android:paddingHorizontal="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textStyle="bold"
                android:textSize="18dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Komisi (Wajib)"
                android:inputType="number"
                android:id="@+id/komisi_item_misi"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_stroke"
            android:layout_marginVertical="3dp"
            android:paddingHorizontal="12dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Target Penjualan"
                android:inputType="number"
                android:id="@+id/target_jual_misi"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>