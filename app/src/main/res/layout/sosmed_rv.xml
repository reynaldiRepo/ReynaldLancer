<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/bottomstroke"
    android:orientation="horizontal"
    android:weightSum="30">
    <net.steamcrafted.materialiconlib.MaterialIconView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:materialIcon="clipboard_arrow_down"
        app:materialIconColor="@color/colorPrimary"
        app:materialIconSize="42dp"
        android:scaleType="center"
        android:id="@+id/icon_sosmed"
        android:layout_weight="9"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorPrimary"
        android:id="@+id/link_sosmed_user"
        android:layout_weight="3"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="9"
        android:id="@+id/update_sosmed"
        android:background="@drawable/ic_save_black_24dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="9"
        android:id="@+id/delete_sosmed"
        android:background="@drawable/ic_cancel_black_24dp"/>
</LinearLayout>