<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottomstroke">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="POSTING TUGAS"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:id="@+id/judul_transasksi_dialog"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/tugas"
        android:id="@+id/logo_mulai_tranksasksi"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tugas_pendahuluan"
                android:id="@+id/isi_mulai_tranksakksi"
                android:layout_margin="12dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/roundedorange"
        android:text="SELANJUTNUA"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="16dp"
        android:id="@+id/bnt_to_create_trankasaksi">

    </Button>

</LinearLayout>



